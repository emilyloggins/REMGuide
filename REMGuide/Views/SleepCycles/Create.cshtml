@model REMGuide.Models.SleepCycle

@{
    ViewData["Title"] = "Create";
}

    <div style="padding: 70px">
        <h2 style="color: #399cbd;">How many times was your sleep disrupted last night?</h2>
        <p>Interrupted sleep affects more than just your dreams.</p>

        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div class="form-group">
                        <select asp-for="Disruptions" class="form-control form-control-lg" id="exampleSelect2">
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                            <option>5</option>
                            <option>6</option>
                            <option>7</option>
                            <option>8</option>
                            <option>9</option>
                            <option>10</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Add" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>

